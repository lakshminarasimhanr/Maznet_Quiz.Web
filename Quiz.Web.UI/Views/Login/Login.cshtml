
@{
    Layout = null;
    ViewBag.Title = "Login";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style>
    #imgLoginImage {
        width:100%;
    }
    #dvLoginSection
    {
        padding:8px;
    }
    .modal-header
    {
        border-bottom:0px;
    }
    #dvLoginFooter
    {
        text-align:center !important;
        border-top:0px;
    }
    .modal-dialog{
        top:25%;
        max-width:350px;
    }
</style>


<div class="container-fluid">
    <div class="" id="dvLoginSection">
        <a href="#"><img src="~/Content/Icons/logo.jpg" /></a> <button type="button" id="btnLoginModalPopUp" class="btn btn-primary pull-right"> Login </button>
    </div>
    <div class="img-fluid">
        <img src="~/Content/Images/LoginImage.jpg" id="imgLoginImage" class="img-thumbnail" alt="Login Image">
    </div>

</div>

<!-- Login Modal -->
<div id="dvModalLogin" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Welcome</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="txtLoginUserName" placeholder="UserName" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="txtLoginPassWord" placeholder="Passoword" />
                </div>
                <a href="#" class="pull-right">Forgot Password</a>
            </div>
            <div class="modal-footer text-center" id="dvLoginFooter">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Login</button>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $("#btnLoginModalPopUp").click(function () {
            $("#txtLoginUserName").val("");
            $("#txtLoginPassWord").val("");
            $("#dvModalLogin").modal("show");
        });
    });
</script>

